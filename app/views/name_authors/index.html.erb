<h1>Listing name_authors</h1>

<table>
  <tr>
    <th>Author string</th>
    <th>Is confirmed</th>
  </tr>

<%= debug @name_authors %>
<% for name_author in @name_authors %>
  <tr>
    <td><%=h name_author.author_string %></td>
    <td><%=h name_author.is_confirmed %></td>
    <td><%= link_to 'Show', name_author %></td>
    <td><%= link_to 'Edit', edit_name_author_path(name_author) %></td>
    <td><%= link_to 'Destroy', name_author, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New name_author', new_name_author_path %>
